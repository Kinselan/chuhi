source 'https://rubygems.org'

gem 'rails'
gem 'pg'
gem 'jquery-rails'
gem 'haml'
gem 'devise'
gem 'okubo', :git => "git://github.com/rgravina/okubo.git"
gem 'coffee-filter'

group :development do
  gem 'rspec'
  gem 'rspec-rails'
  gem 'sqlite3'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'therubyracer'
  gem 'uglifier'
  gem "less-rails"
  gem "twitter-bootstrap-rails"
end

