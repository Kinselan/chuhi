- words = current_user.words
.row
  .span12
    - if words.count == 0
      .alert.alert-info
        You have no cards in your deck! Select 'Deck' and add your first card.
    - elsif words.review.empty?
      .alert.alert-info
        You have no cards requiring review! Select 'Deck' and add more cards, or take a well earned break.
    - else
      %a.btn.btn-primary{:href => url_for(:controller => :review, :action => :review)}
        Review
    
    - if flash[:success]
      .alert.alert-sucess
        =flash[:success]
.row
  %br
.row
  .span4
    %table.table
      %thead
        %tr
          %th
            Cards:
          %td=words.count
  .span8
    .graph#deck-graph

- unless words.review.empty?
  :coffeescript
    $(document).ready ->
      data = [[#{words.untested.count},label: "New"], [#{words.expired.count},label: "Expired"], [#{words.failed.count},label: "Forgotten"], [#{words.known.count},label: "Known"]]
      Chuhi.setup_graph(data)
